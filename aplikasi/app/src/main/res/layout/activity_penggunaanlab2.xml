<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="202dp"
        android:layout_height="212dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/labrobotikapendidikan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Kegiatan Labotarium "
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Pengisian kegiatan laboratorium oleh pengguna (penanggung jawab kegiatan) atau pengelola lab."
            android:textColor="@color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:text="Email"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/Email_lb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_anchor="@+id/editTextTextPersonName"
        app:layout_anchorGravity="center" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Log Book"
        android:textSize="17dp" />

    <RadioGroup
        android:id="@+id/optionlogbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp">

        <RadioButton
            android:id="@+id/kegiatanlab_lb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kegiatan Labotarium" />


        <RadioButton
            android:id="@+id/perawatan_lb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perawatan, Perbaikan, dan Pengembangan lab" />

        <RadioButton
            android:id="@+id/kegiatan_lb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kegiatan Labotarium" />

        <RadioButton
            android:id="@+id/lainnya_lb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lainnya
" />


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="back" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="next" />
    </LinearLayout>

</LinearLayout>